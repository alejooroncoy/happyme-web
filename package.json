{
  "name": "happyme-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "prisma:generate:all": "prisma generate --schema=prisma/schema.prisma && prisma generate --schema=prisma-bots/schema.prisma",
    "prisma:migrate:all": "prisma migrate dev --schema=prisma/schema.prisma && prisma migrate dev --schema=prisma-bots/schema.prisma",
    "prisma:studio:all": "prisma studio --schema=prisma/schema.prisma && prisma studio --schema=prisma-bots/schema.prisma",
    "prisma:push:all": "prisma db push --schema=prisma/schema.prisma && prisma db push --schema=prisma-bots/schema.prisma",
    "prisma:pull:all": "prisma db pull --schema=prisma/schema.prisma && prisma db pull --schema=prisma-bots/schema.prisma",
    "prisma:migrate:bots": "prisma migrate dev --schema=prisma-bots/schema.prisma",
    "prisma:studio:bots": "prisma studio --schema=prisma-bots/schema.prisma",
    "prisma:push:bots": "prisma db push --schema=prisma-bots/schema.prisma",
    "prisma:pull:bots": "prisma db pull --schema=prisma-bots/schema.prisma",
    "prisma:generate:bots": "prisma generate --schema=prisma-bots/schema.prisma",
    "prisma:migrate:web": "prisma migrate dev --schema=prisma/schema.prisma",
    "prisma:studio:web": "prisma studio --schema=prisma/schema.prisma",
    "prisma:push:web": "prisma db push --schema=prisma/schema.prisma",
    "prisma:pull:web": "prisma db pull --schema=prisma/schema.prisma",
    "prisma:generate:web": "prisma generate --schema=prisma/schema.prisma"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "node-fetch": "^3.3.2",
    "prisma": "^6.16.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "tw-animate-css": "^1.3.8",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
